<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#3A2850"
    tools:context=".HomeActivity">

    <RelativeLayout
        android:id="@+id/ac_home_rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:layout_marginTop="120dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="@string/hosgeldin"
            android:textSize="25sp"
            android:drawableRight="@drawable/ic_user"
            android:paddingRight="20dp"
            android:drawableTint="@color/colorPrimary" />


        <TextView
            android:id="@+id/adSoyad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="Anasayfa"
            android:textSize="15sp"
            android:layout_marginTop="40dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ac_home_rl_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ac_home_rl_title"
        android:layout_marginTop="20dp"
        android:padding="30dp"
        android:paddingTop="50dp"
        android:rowCount="2"
        android:columnCount="2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/ac_home_cv_duyurular"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/roundrect">
                <ImageView
                    android:id="@+id/ac_home_iv_duyurular"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/duyurular"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"/>
                <TextView
                    android:id="@+id/ac_home_tv_duyurular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/ac_home_iv_duyurular"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/colorWhite"
                    android:textSize="24sp"
                    android:text="Duyurular"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ac_home_cv_message"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/roundrect"
                android:layout_alignParentEnd="true">
                <ImageView
                    android:id="@+id/ac_home_iv_message"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/chat"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"/>
                <TextView
                    android:id="@+id/ac_home_tv_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/ac_home_iv_message"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/colorWhite"
                    android:textSize="24sp"
                    android:text="MesajlaÅŸma"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:elevation="5dp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="485dp"
        android:src="@drawable/arel" />

    <TextView
        android:layout_width="142dp"
        android:layout_height="150dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="470dp"
        android:background="@drawable/roundrect"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:id="@+id/txtArelWeb"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="580dp"
        android:layout_marginLeft="60dp"
        android:textColor="#ffffff"
        android:text="@string/arelweb"
        android:fontFamily="sans-serif-medium"
        android:textSize="20sp" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:elevation="5dp"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="485dp"
        android:src="@drawable/etkinlikler" />

    <TextView
        android:layout_width="142dp"
        android:layout_height="150dp"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="470dp"
        android:background="@drawable/roundrect"
        android:textAlignment="center"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="580dp"
        android:layout_marginLeft="270dp"
        android:textColor="#ffffff"
        android:text="@string/etkinlikler"
        android:fontFamily="sans-serif-medium"
        android:textSize="20sp" />

</RelativeLayout>